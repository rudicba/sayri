<% if notice %>
	<div class="alert alert-success">
		<button type="button" class="close" data-dismiss="alert">&times;</button>
		<%= notice %>
	</div>
<% end %>
<legend><h3><%= @sudoer.cn %></h3></legend>
<h4><p class="muted"><%= @sudoer.description %></h4></p>
<br>
<table class="table table-striped">
	<tbody>
		<tr>
  		<td class ="muted">sudoUser:</td>
  		<td><%= @sudoer.sudoUser %></td>
  	</tr>
		<tr>
			<td class ="muted">sudoHost:</td>
			<td><%= @sudoer.sudoHost %></td>
		</tr>
  	<tr>
  		<td class ="muted">sudoCommand:</td>
  		<td><%= @sudoer.sudoCommand %></td>
  	</tr>
  </tbody>
</table>
<p class="text-right">
	<%= link_to 'Edit', edit_sudoer_path(@sudoer) %> |
	<%= link_to 'Back', sudoers_path %>
</p>