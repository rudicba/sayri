<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>cn</th>
      <th>description</th>
      <th>ipHostNumber</th>
      <th><div class="text-center">action</div></th>
    </tr>
  </thead>
  <tbody>
    <% if @hosts.empty? %>
      <td colspan="2">
        No matching records found
      </td>
    <%end%>
    <% @hosts.each do |h| %>
      <tr>
        <td><%= link_to h.cn, h%></td>
        <td><%= h.description %></td>
        <td><%= h.ipHostNumber %></td>
        <td> 
          <div class="text-center">
            <%= link_to '', edit_host_path(h), :rel => "tooltip", 
                                               :title => "Edit Host", :class => 'icon-edit' %>
            <%= link_to '', h, method: :delete, data: { confirm: 'Are you sure?' }, 
                               :rel => "tooltip", :title => "Delete Host", :class => 'icon-trash' %>
          </div>
        </td>
      </tr>
    <%end%>
  </tbody>
</table>