					<li class="<%= 'active' if active_action?('new') %>"> 
						<%= link_to "New Group", new_group_path %> 
					</li>
				</ul>
			</div>	
			<div class="span9">
				<%= yield %>
			</div>
		</div>
	</div> 
<% end %>

