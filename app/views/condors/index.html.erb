<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>status</th>
      <th>cn</th>
      <th><div class="text-center">action</div></th>
    </tr>
  </thead>
  <tbody>
    <% if @hosts.empty? %>
      <td colspan="2">
        No matching records found
      </td>
    <%end%>
    <% @hosts.each do |h| %>
      <tr>
        <% if @hrun.include?(h.cn) %>
          <td><span class="icon-ok"></span></td>
        <% else %>
          <td><span class="icon-remove"></span></td>
        <% end %>
        <td><%= h.cn %></td>
        <td> 
          <div class="text-center">
            <%= link_to '', start_condors_path(h.cn), :class => 'icon-play' %>
            <%= link_to '', stop_condors_path(h.cn),:class => 'icon-stop' %>
          </div>
        </td>
      </tr>
    <%end%>
  </tbody>
</table>