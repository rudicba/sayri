<% if notice %>
  <div class="alert alert-success">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <%= notice %>
  </div>
<% end %>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Condor</th>
      <th>Hostname</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% if @hosts.empty? %>
      <td colspan="3">
        No matching records found
      </td>
    <%end%>

    <% @hosts.each do |h| %>
    <% if @watched.include?(h.cn) %>
      <tr>
        <% if @hrun.include?(h.cn) %>
            <td class="span1">
              <div class="text-center">
                <button class="btn btn-mini btn-success disabled" type="button">Running</button>
              </div>
            </td>
          <% else %>
            <td class="span1">
              <div class="text-center">
                <button class="btn btn-mini btn-danger disabled" type="button">Stopped</button>
              </div>
            </td>
          <% end %>
        </div>

        <td><%= h.cn %></td>
        <td class="span1"> 
          <div class="text-center">
            <%= link_to '', {:action => 'start', :hostname => h.cn}, :class => 'icon-play' %>
            <%= link_to '', {:action => 'stop', :hostname => h.cn}, :class => 'icon-stop' %>
          </div>
        </td>
      </tr>
<%end%>
    <%end%>

  </tbody>
</table>