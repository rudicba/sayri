<% if notice %>
  <div class="alert alert-success">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <%= notice %>
  </div>
<% end %>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>PC Status</th>
      <th>Condor</th>
      <th>Hostname</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% if @watched.empty? %>
      <td colspan="3">
        No matching records found
      </td>
    <%end%>

    <% @watched.each do |w| %>
      <tr>
        <% if @halive.include?(w) %>
          <td class="span1">
            <div class="text-center">
              <button class="btn btn-mini btn-success disabled" type="button">On </button>
            </div>
          </td>
        <% else %>
          <td class="span1">
            <div class="text-center">
              <button class="btn btn-mini btn-danger disabled" type="button">Off</button>
            </div>
          </td>
        <% end %>

        <% if @hrun.include?(w) %>
          <td class="span1">
            <div class="text-center">
              <button class="btn btn-mini btn-success disabled" type="button">Running</button>
            </div>
          </td>
        <% else %>
          <td class="span1">
            <div class="text-center">
              <button class="btn btn-mini btn-danger disabled" type="button">Stopped</button>
            </div>
          </td>
        <% end %>
        
        <td><%= w %></td>
        <td class="span1"> 
          <div class="text-center">
            <%= link_to '', {:action => 'start', :hostname => w}, :class => 'icon-play' %>
            <%= link_to '', {:action => 'stop', :hostname => w}, :class => 'icon-stop' %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>